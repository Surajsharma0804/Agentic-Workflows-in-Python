# Environment Configuration Example
# Copy this file to .env and update with your values

# Application
ENVIRONMENT=development
DEBUG=true
APP_NAME="Agentic Workflows"
APP_VERSION="1.0.0"

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security - CRITICAL: Generate a strong random key for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_STRONG_RANDOM_KEY_32_CHARS_MIN
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://agentic:password@localhost:5432/agentic_workflows
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/agentic.log

# Audit
AUDIT_LOG_PATH=audit.log
AUDIT_RETENTION_DAYS=90

# Workflow Execution
MAX_CONCURRENT_WORKFLOWS=100
WORKFLOW_TIMEOUT_SECONDS=3600
TASK_RETRY_MAX_ATTEMPTS=3
TASK_RETRY_DELAY_SECONDS=5

# Storage
STORAGE_BACKEND=local
STORAGE_PATH=./storage

# AWS (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# LLM Providers
# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000

# Anthropic Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# Google Gemini
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=4000

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# LLM Settings
LLM_PROVIDER=dummy  # Options: openai, claude, gemini, ollama, dummy
LLM_TEMPERATURE=0.7
LLM_TIMEOUT_SECONDS=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Plugin System
PLUGIN_DIRECTORY=./plugins
PLUGIN_AUTO_RELOAD=false

# Workflow Versioning
ENABLE_VERSIONING=true
MAX_VERSIONS_PER_WORKFLOW=10

# Email Notifications (for password reset, etc.)
# If not configured, emails will be logged to console instead
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@agentic-workflows.com

# Slack Notifications
SLACK_WEBHOOK_URL=

# OAuth2 Authentication Providers
# Google OAuth - Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/google/callback

# Apple Sign In - Get credentials from: https://developer.apple.com/account/resources/identifiers/list/serviceId
APPLE_CLIENT_ID=com.yourcompany.agentic-workflows
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----
APPLE_REDIRECT_URI=https://your-domain.com/api/auth/apple/callback

# GitHub OAuth - Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://your-domain.com/api/auth/github/callback

# Frontend Feature Flags
FEATURE_ANIMATIONS=true  # Set to false to disable animations globally
